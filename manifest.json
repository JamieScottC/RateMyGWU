{
  "name": "RateMyGWU",
  "version": "1.0",
  "description": "Find professors ratings on the GW course schedule!",
  "permissions": ["activeTab", "declarativeContent", "storage", "*://www.ratemyprofessors.com/*"],
  "background": {
      "scripts": ["/js/jquery-3.5.1.min.js", "/js/background.js"],
      "persistent": false
  },
  "content_scripts": [
        {
            "matches": ["https://my.gwu.edu/mod/pws/courses.cfm?campId=1&termId=*&subjId=*"],
            "js": ["/js/jquery-3.5.1.min.js", "/js/injectRate.js"],
            "css" : ["/css/rate.css"],
            "run_at" : "document_end"
        }
    ],
  "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/RateMyGWULogo16.png",
        "32": "images/RateMyGWULogo32.png",
        "48": "images/RateMyGWULogo48.png",
        "128": "images/RateMyGWULogo128.png"
      }
  },
  "icons": {
      "16": "images/RateMyGWULogo16.png",
      "32": "images/RateMyGWULogo32.png",
      "48": "images/RateMyGWULogo48.png",
      "128": "images/RateMyGWULogo128.png"
  },
  "manifest_version": 2
}
